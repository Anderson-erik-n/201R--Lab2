    <p> 
    <strong><span id="story"></span></strong>
    </p>
 
    <script>
        var libButton = document.getElementById('lib-button');
        var libIt = function() {
            var story = document.getElementById("story");
            var name = document.getElementById("name").value;
            var adj = document.getElementById("adj").value;
            var country = document.getElementById("cou").value;
            var greekL = document.getElementById("grc").value;
            var quote = document.getElementById("quo").value;
            
                story.innerHTML ="There once this small little boy by the name of  " + name + ". He was very, very, very " + adj + ". Once, a bully boy came and said,'I am gonna take your " + greekL + " back to " + country + "!' The pigeon replied,'" + quote + "'"
            
        };
        libButton.addEventListener('click', libIt);
        
    </script>
  
